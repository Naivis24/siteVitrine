{% extends "AppBundle::layout.html.twig" %}

{% block title %}
    Showroom French Select - Nos marques
{% endblock %}

    {% block body %}
        <h1>Liste des Marques</h1>


  {% set cpt = 0 %}
       <div class="card-deck">
               {% for brand in brands %}

                {% if cpt !=0 and cpt % 4 == 0 %}
                    </div>
                    <div class="card-deck">
                {% endif %}

                   <div class="card card-marques">

                       <img class="card-img" src="{{ asset('bundles/app/img/anaik_1.jpg') }}">
                       <div class="card-img-overlay info">
                           <img src="{{ asset('bundles/app/img/' ~ brand.getLogo())}}" >
                       </div>
                       <div class="card-img-overlay hover-info">
                           <h5 class="card-title"> {{ brand.getName() }} </h5>
                           <p> {{ brand.getSlogan() }} </p>

                           <a href="{{ path('details_marques', {'marque': brand.getName()} ) }}"> DÃ©couvrir la marque </a>
                       </div>

                   </div>
                   {% set cpt = cpt + 1 %}
               {% endfor %}
       </div>

    {% endblock %}